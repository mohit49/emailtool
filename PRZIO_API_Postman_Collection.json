								"header": [
									{
										"key": "Content-Type",
										"value": "application/json"
									}
								],
								"body": {
									"mode": "raw",
									"raw": "{\n    \"subject\": \"Welcome to PRZIO\",\n    \"recipients\": [\n        \"user1@example.com\",\n        \"user2@example.com\"\n    ],\n    \"templateId\": \"507f1f77bcf86cd799439011\",\n    \"projectId\": \"507f1f77bcf86cd799439011\"\n}",
									"options": {
