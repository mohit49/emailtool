							"name": "Invalid API Key",
							"originalRequest": {
								"method": "POST",
								"header": [],
								"body": {
									"mode": "raw",
									"raw": "{\n    \"apiKey\": \"invalid_key\",\n    \"projectId\": \"507f1f77bcf86cd799439011\"\n}",
									"options": {
										"raw": {
											"language": "json"
										}
									}
								},
								"url": {
									"raw": "{{baseUrl}}/api/auth/api-key",
									"host": [
